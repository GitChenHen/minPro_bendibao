/* pages/detail/detail.wxss */

.container {
  min-height: 100vh;
}

.container image {
  width: 100vw;
  height: 400rpx;
}

.container .infos {
  padding: 25rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.container .infos .title {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.container .comments {
  margin-top: 20rpx;
  padding: 25rpx;
  background-color: #fff;
}

.container .comments .title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
}

.container .comments .right_Date {
  font-size: 32rpx;
  display: flex;
  /* flex默认为水平方向排布， flex-direction: column改为垂直方向 */
  /* flex-direction就是调整主轴的方向的对齐方式 */
  /* align-items 调整侧轴的对齐方式 */
  flex-direction: column;
  /* 设置内容为靠右布局 */
  align-items: flex-end;
}

.container .comments .right_Date text:first-child {
  color: red;
}

.container .comments .commentInfo {
  font-size: 34rpx;
}
